<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../Magento/Core/etc/layout_single.xsd">
    <referenceBlock name="head">
        <block class="Magento\Theme\Block\Html\Head\Css" name="riconeitzel-vertnav-style-css">
            <arguments>
                <argument name="file" xsi:type="string">RicoNeitzel_VertNav::style.css</argument>
            </arguments>
        </block>
    </referenceBlock>

    <move element="catalog.topnav" destination="topnav_wrapper"/>
    <referenceContainer name="page_top">
        <block class="Magento\Framework\View\Element\Text\ListText" name="topnav_wrapper" before="catalog.topnav">
            <action method="unsetChild" ifconfig="catalog/vertnav/hide_top">
                <argument name="name" xsi:type="string">catalog.topnav</argument>
            </action>
        </block>
    </referenceContainer>

    <referenceContainer name="left">
        <block class="Magento\Framework\View\Element\Text\ListText" name="vertnav_wrapper" before="-">
            <block class="RicoNeitzel_VertNav_Block_Navigation" name="catalog.vertnav" template="RicoNeitzel_VertNav::left.phtml"/>
            <action method="unsetChild" ifconfig="catalog/vertnav/hide_vertnav">
                <argument name="name" xsi:type="string">catalog.vertnav</argument>
            </action>
        </block>
    </referenceContainer>
</layout>
